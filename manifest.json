{
  "manifest_version": 3,
  "name": "Chat GPT Extension",
  "version": "1.0",
  "description": "Use CHAT GPT without changing tabs",
  "permissions": ["storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/robot.png"
  },
  "icons": {
    "128": "images/robot.png"
  }
}